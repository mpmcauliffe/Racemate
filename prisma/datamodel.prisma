type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    exercises: [Exercise!]!
    workouts: [Workout!]! @relation(name: "WorkoutToUser", onDelete: CASCADE)
}

type Exercise {
    id: ID! @id
    title: String!
    muscleGroup: String!
    description: String
    sets: [Int!] @scalarList(strategy: RELATION)
    notes: String
}

type Workout {
    id: ID! @id
    exercises: [Exercise!]! 
    owner: User! @relation(name: "WorkoutToUser", onDelete: SET_NULL)
}
