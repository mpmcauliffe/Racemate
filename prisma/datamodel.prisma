type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    exercises: [Exercise!]!
    workouts: [Workout!]! @relation(name: "WorkoutToUser", onDelete: CASCADE)
    plans: [Plan!]! @relation(name: "PlanToUser", onDelete: CASCADE)
}

type Exercise {
    id: ID! @id
    title: String!
    muscleGroup: String!
    description: String
    sets: [Int!] @scalarList(strategy: RELATION)
    notes: String
    date: String 
}

type Workout {
    id: ID! @id
    title: String!
    exercises: [Exercise!]!
    owner: User! @relation(name: "WorkoutToUser", onDelete: SET_NULL)
}

type Plan {
    id: ID! @id
    exercise: Exercise!
    date: String!
    owner: User! @relation(name: "PlanToUser", onDelete: SET_NULL)
}
